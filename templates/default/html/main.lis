<!DOCTYTPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="theme-color" content="{{ theme.color }}">
        <title>{{ page.title }}</title>
        <link rel="stylesheet" href="/static/styles/{{ page.theme }}.css">
    </head>
    <body>
        <div class="menu">
            <a href="/">About</a>
            <a href="/services/">Services</a>
            <a href="/projects/">Projects</a>
            <a href="/blog">Blog</a>
        </div>
        {# <div class="nav">
        </div> #}
        <div class="header">
            <h1>{{ page.title }}</h1>
        </div>
        <hr>
        <div class="content">
        {% for sectionid, section in page.content.items() %}
            <div class="section{% if section.boxed %} boxed{% endif %}{% if section.fitscreen %} fitscreen{% endif %} {{ section.theme }}" id="{{ sectionid }}">
                {% if section.type == "content" %}
                <h2>{{ section.title }}</h2>
                <p>{{ section.content }}</p>
                {% elif section.type == "linklist" %}
                {% if section.title %}<h2>{{ section.title }}</h2>{% endif %}
                    {% for link in section.links %}
                        {% if link.type == "full" %}
                            {% if pages[link.page] %}
                            <a href="{{ link.page }}" class="linklistlink {{ pages[link.page].theme }}">{% if pages[link.page].icon %}
                                <img src="{{ pages[link.page].icon }}" alt="{{ pages[link.page].icontitle }}">{% endif %}
                                <h3>{{ pages[link.page].title }}</h3>
                                <p>{{ pages[link.page].desc }}</p>{% if pages[link.page].date %}
                                <p>{{ pages[link.page].date }}</p>{% endif %}
                            </a>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
        </div>
        <hr>
        <div class="footer">
            <p>CTCL 2011-2025</p>
        </div>
    </body>
</html>

